# تنظیمات مخصوص GitHub Codespaces
# GitHub Codespaces Specific Environment Settings

# Django Configuration
DJANGO_SETTINGS_MODULE=construction_project.production_settings
DJANGO_ENVIRONMENT=development
DEBUG=True

# Database Configuration (SQLite - Persistent Volume)
USE_SQLITE=true
DB_NAME=database/local.sqlite3

# Security (Codespaces Safe)
SECRET_KEY=codespaces-secret-key-change-in-production
ALLOWED_HOSTS=*

# Codespaces Paths
PYTHONPATH=/workspaces/construction_project
VIRTUAL_ENV=/workspaces/construction_project/env

# Static Files (Volume Mounted)
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# Logging (Console Output)
LOG_LEVEL=INFO

# Codespaces Specific
CODESPACES=true
PORT=8000
HOST=0.0.0.0

# Volume Mounts (برای اطلاعات)
VOLUME_DATABASE=/workspaces/construction_project/database
VOLUME_LOGS=/workspaces/construction_project/logs
VOLUME_MEDIA=/workspaces/construction_project/media
VOLUME_BACKUPS=/workspaces/construction_project/backups

# Project Settings (قابل تغییر برای پروژه‌های مختلف)
PROJECT_TITLE=مدیریت مالی پروژه های آرشا
PROJECT_DESCRIPTION=به سیستم مدیریت پروژه‌های ساختمانی خوش آمدید
PROJECT_LOGO=images/logos/logo.png
PROJECT_LOGO_ALT=لوگوی شرکت آرشا

# AI Assistant Configuration
# انتخاب Provider: openai, anthropic, huggingface, gemini, openrouter, local
AI_ASSISTANT_PROVIDER=openrouter

# OpenAI Configuration (پیش‌فرض)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Configuration (اختیاری)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration (اختیاری)
# GOOGLE_API_KEY=your_google_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here  # یا از GOOGLE_API_KEY استفاده کنید
# GEMINI_MODEL=gemini-pro  # یا gemini-1.5-pro, gemini-pro-vision

# OpenRouter Configuration (اختیاری - unified interface for multiple LLMs)
OPENROUTER_API_KEY=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
OPENROUTER_MODEL=z-ai/glm-4.5-air:free #qwen/qwen3-4b:free #google/gemini-2.0-flash-exp:free   # یا anthropic/claude-3-sonnet, google/gemini-pro, etc.
OPENROUTER_HTTP_REFERER=https://github.com/your-repo  # اختیاری
OPENROUTER_X_TITLE=Construction Project Assistant  # اختیاری

# Hugging Face Configuration (اختیاری)
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# HUGGINGFACE_ENDPOINT=https://your-space.hf.space
# HUGGINGFACE_MODEL_ID=mistralai/Mistral-7B-Instruct-v0.2

# Local Model Configuration (اختیاری - برای Ollama یا LocalAI)
# LOCAL_MODEL_URL=http://localhost:11434
# LOCAL_MODEL_NAME=llama2