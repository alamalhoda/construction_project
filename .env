# Environment variables for Chabokan.net deployment
# Update these values with your actual configuration

# Django settings
DEBUG=True
DJANGO_ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-this-in-production

USE_SQLITE=True
DB_FILE=local.sqlite3

# Database settings (PostgreSQL)
DB_NAME=construction_db
DB_USER=construction_user
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# تنظیمات CSRF
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=False
CSRF_COOKIE_SAMESITE=Lax
CSRF_TRUSTED_ORIGINS=https://django-arash.chbk.app,http://django-arash.chbk.app

# Allowed hosts
ALLOWED_HOST=localhost
TRUSTED_ORIGIN=http://localhost:8000

# Email settings (Chabokan email service)
EMAIL_HOST=smtp.chabokan.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@chabokan.net
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@your-domain.chabokan.net

# Static files
STATIC_URL=/static/
MEDIA_URL=/media/

# Security
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

SESSION_COOKIE_SECURE=False

# Logging
LOG_LEVEL=INFO

# Gunicorn settings
GUNICORN_WORKERS=3

# Codespaces Specific
CODESPACES=true
PORT=8000
HOST=0.0.0.0

# Volume Mounts (برای اطلاعات)
VOLUME_DATABASE=/workspaces/construction_project/database
VOLUME_LOGS=/workspaces/construction_project/logs
VOLUME_MEDIA=/workspaces/construction_project/media
VOLUME_BACKUPS=/workspaces/construction_project/backups

# Project Settings (قابل تغییر برای پروژه‌های مختلف)
PROJECT_TITLE=مدیریت مالی پروژه های آرشا
PROJECT_DESCRIPTION=به سیستم مدیریت پروژه‌های ساختمانی خوش آمدید
PROJECT_LOGO=images/logos/logo.png
PROJECT_LOGO_ALT=لوگوی شرکت آرشا
