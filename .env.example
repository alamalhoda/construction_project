# نمونه فایل تنظیمات محیط
# Example Environment Configuration File

# Django Configuration
DJANGO_SETTINGS_MODULE=construction_project.settings
DJANGO_ENVIRONMENT=development
DEBUG=True

# Database Configuration
USE_SQLITE=true
DB_NAME=database/db.sqlite3

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=*

# Project Settings (قابل تغییر برای پروژه‌های مختلف)
# Project Settings (Customizable for different projects)
PROJECT_TITLE= سیستم مدیریت پروژه ساختمانی
PROJECT_DESCRIPTION=به سیستم مدیریت پروژه‌های ساختمانی خوش آمدید
PROJECT_LOGO=images/logos/logo.png
PROJECT_LOGO_ALT=لوگوی شرکت

